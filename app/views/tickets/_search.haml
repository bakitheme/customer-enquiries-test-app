.row
  .col-12
    .card.mb-3
      .card-header
        %h3 Search
        %p You can seacrh tickets by refence code or by subject and content
      .card-body
        = form_tag(tickets_path, method: :get) do
          .form-row
            = text_field_tag :search, params[:search], class: 'form-control col-6 mr-1', placeholder: 'Input reference code or some words...'

            = submit_tag 'Search', name: nil, class: 'btn btn-primary col-2'
